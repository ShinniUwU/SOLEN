[Unit]
Description=SOLEN Kopia maintenance (quick)

[Service]
Type=oneshot
Environment=SOLEN_PLAIN=1
EnvironmentFile=-%h/.config/solen/backups.env
EnvironmentFile=-/etc/solen/backups.env
ExecStart=%h/.local/bin/serverutils run backups/maintenance -- --quick --json
ExecStartPre=/usr/bin/env mkdir -p %h/.local/share/solen
StandardOutput=append:%h/.local/share/solen/kopia-maintenance.ndjson
StandardError=journal
